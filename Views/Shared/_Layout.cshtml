<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=100%, initial-scale=2.0" />
    <title class="fontw">@ViewData["Title"] - Gate Pass Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body width="100%">
    <header >
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="https://i.imgur.com/sap2CkE.png" alt="Image" style="width:110px;"></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item dropdown">
                            <a href="@Url.Action("Index", "LocalOD")" class="navbar-btn btn btn-default btn-lg pull-right text-secondary" style="font-family:Calibri; font-size:x-large; font-weight:bolder; ">Local <span style="color:	#FF4500">O</span>D</a>
                            <a href="@Url.Action("Index", "VisitorsEntry")" class="navbar-btn btn btn-default btn-lg pull-right text-secondary" style="font-family:Calibri; font-size:x-large; font-weight:bolder">Visit<span style="color:	#FF4500" ">O</span>rs Entry</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                @RenderBody()
            </div>
        </div>

        
    </div>

   

    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>

<footer>
    <p class="">&copy; 2023 - Gate-Pass Management . All Rights Reserved.</p>
</footer>

<style>
    .fontw{
        font-weight: bold;
    }
    footer {
        margin-top:auto;
        text-align: center;
        padding: 4px;
        color: #000;
    }
    html{
        height: 100%;
    }
    body{
        min-height:100%;
        display: flex;
        flex-direction:column;
    }
</style>

    
